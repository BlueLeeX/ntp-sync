<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sufficientlysecure.donations"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />
        
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required permission to use Google Play Store donations -->
    <uses-permission android:name="com.android.vending.BILLING" />
    
    <application>
        <!-- - Google Play Store donations -->
        <service android:name="org.sufficientlysecure.donations.google.BillingService" />

        <receiver android:name="org.sufficientlysecure.donations.google.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

    </application>F

</manifest>